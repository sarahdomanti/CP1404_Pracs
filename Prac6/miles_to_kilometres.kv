BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size_hint: (1.8, 1)
            id: input_number
            text: ''
            on_text: app.handle_convert(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_convert(input_number.text)
    Label:
        color: (255, 255, 0, 1)
        id: result_value

