BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 40
            multiline: False
        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(float(input_number.text))
        Label:
            id: output_label
            font_size: 40
            color: 255, 0, 150, 1
    Label:
        text: 'Enter a number and press "Square"'